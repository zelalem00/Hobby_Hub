@model Hobby
<partial name="_navbar"/>

<h1>Edit Hobby</h1>
<form action="/update/@Model.HobbyId" method="post">
     <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" cols="8" rows="7" class="form-control"></textarea>
    </div>
    <input type="submit" value="Create Hobby" class="btn btn-warning">
</form>